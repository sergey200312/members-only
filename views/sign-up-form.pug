extends layout 

block content 

  .form-container
    h1 Sign Up
    form(action="" method="POST")
      label(for="username") Username
      input(name="username" placeholder="username" type="text" value="" required)
      label(for="password") Password
      input(name="password" placeholder="password"  type="password" value="" required )
      label(for='re-password') Confirm password
      input(name='re-password' placeholder='password' type="password" value="" required)
      label(for="isAdmin") Admin?
      input(type="checkbox" name="isAdmin" value="checked")

      button Sign Up 

    if errors
      ul 
        each error in errors 
          li #{error.msg}
 
