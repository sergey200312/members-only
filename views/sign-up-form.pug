extends layout 

block content 

  h1 Sign Up
  form(action="" method="POST")
    label(for="username") Username
    input(name="username" placeholder="username" type="text" value="")
    label(for="password") Password
    input(name="password" type="password" value="")
    label(for='re-password') Confirm password
    input(name='re-password' type="password" value="")
    label(for="isAdmin") Admin?
    input(type="checkbox" name="isAdmin" value="checked")

    button Sign Up 

  if errors
    ul 
      each error in errors 
        li #{error.msg}
 
